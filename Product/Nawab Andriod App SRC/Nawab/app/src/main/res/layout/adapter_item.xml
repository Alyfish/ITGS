<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="5dp"
    android:layout_margin="10dp"
    android:id="@+id/constraint_layout"
    android:background="@drawable/shape7"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--    <android.support.v7.widget.CardView-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="170dp"-->
    <!--        android:layout_marginTop="20dp"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/textView1"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        android:layout_margin="10dp"-->
    <!--        app:cardCornerRadius="5dp"-->
    <!--        >-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#50000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/add_to"
            app:layout_constraintTop_toTopOf="parent">



            <ImageView
                android:id="@+id/getImage"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#000"
                android:layout_marginStart="0.3dp"
                android:layout_marginTop="0.3dp"
                android:layout_marginEnd="0.3dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toEndOf="@id/constraint"
            android:layout_marginStart="15dp"
            android:textColor="#3C3A3A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="10dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10dp"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.499"
            android:visibility="gone"
            android:textSize="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/price"
            app:layout_constraintTop_toTopOf="@+id/price"
            android:layout_marginLeft="10dp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cnQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:layout_constraintStart_toStartOf="@+id/price"
            android:layout_marginRight="20sp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
              >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Quantity: "
                    android:textSize="15sp"
                 />

                <Button
                    android:id="@+id/decrementQuantity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/black"
                    android:background="#eeeeee"
                    android:backgroundTint="#eeeeee"
                    android:text="-"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                   />

                <TextView
                    android:id="@+id/quantityProductPage"
                    android:layout_width="30dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="0"
                    />

                <Button
                    android:id="@+id/incrementQuantity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#eeeeee"
                    android:text="+"
                    android:background="#eeeeee"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/add_to"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Add To Cart"
            android:focusable="true"
            android:backgroundTint="#eeeeee"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


